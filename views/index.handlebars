<div class="container-fluid">
	<div class="row">
		<main class="col">
			<h2>Where To Watch The Game</h2>
			<div class="row">
				<div class="col-md-6">
					<div id="map"></div>
				</div>
				<div class="col-md-3" id="venues-container">
					<div class="card module" id="card-venues">
						<div class="card-body">
							<div id="venues"></div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<div class="col-md-2 d-none d-md-block bg-light sidebar">
			<h4>Messages</h4>
			{{#each message}}
				<p class="message">{{text}}</p>
			{{/each}}
			<form id="message">
				<label>Enter Message</label>
				<input type="text" id="input_message">
				<button type="submit" class="btn btn-primary" id="submit-message">Submit</button>
			</form>
		</div>
		<br><br>
		{{!-- Sport Bar Locations --}}
	</div>
	<h2>Team News</h2>
	<div class="row">
		<div class="col-6">
			<div class="card module">
				<div class="card-header">
    Twitter
  </div>
			  <div class="card-body">
			    {{!-- <h5 class="card-title">Twitter</h5> --}}
			     <div id="twitterMessages"></div>
			  </div>
			</div>
		</div>
		<div class="col-3">
			<div class="card module">
				<div class="card-header">
    NBA News
  </div>
			  <div class="card-body">
			    {{!-- <h5 class="card-title">NBA News</h5> --}}
			    <div id="NBAGames"></div>
			  </div>
			</div>
		</div>
	</div>
	<h2>Events<span><button type="button" class="btn btn-primary add-event" data-toggle="modal" data-target="#exampleModal">+</button></span></h2>
	<div class="row">
		{{#each newEvent}}
			<div class="col-3">			
				<div class="card event">
  					<div class="card-body">
							<div class="card-header">Event: {{title}}</div>
  					  <p class="card-text">{{description}}</p>
					  	<p>When: {{date}}</p>
					  	<p>Where: {{location}}</p>
					  	<p><span>Who's Going: {{attendees}}</span></p>
  					  <a href="#" class="btn btn-primary">I'm Going</a>
  					</div>
				</div>	
			</div>
